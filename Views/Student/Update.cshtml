@model List<Faculty>
@{
    var faculties = Model;
    var student = ViewBag.Student;
}

<h1 class="display-4">Student Create Page</h1>
<form action="/Student/Save" method="POST">

  <div class="form-group">
    <label for="Id">Id</label>
    <input type="text" class="form-control" id="Id" name="Id" value="@student.Id" readonly="readonly">
  </div>

  <div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" id="Name" name="Name" value="@student.Name">
  </div>

<div class="form-group">
    <label for="Gender">Gender</label>
    <div class="form-check">
    @if(student.Gender)
    {
        <input class="form-check-input" type="radio" name="Gender" id="Male" checked="checked">
    }
    else
    {
        <input class="form-check-input" type="radio" name="Gender" id="Male">
    }
    <label class="form-check-label" for="flexRadioDefault1">
        Male
    </label>
    </div>
    <div class="form-check">
    @if(!student.Gender)
    {
        <input class="form-check-input" type="radio" name="Gender" id="Female" checked="checked">
    }
    else
    {
        <input class="form-check-input" type="radio" name="Gender" id="Female">
    }
    <label class="form-check-label" for="flexRadioDefault2">
        Female
    </label>
    </div>
</div>

  <div class="form-group">
    <label for="Category">Category</label>
    <select class="form-control" id="FacultyID" name="FacultyID">
        @foreach (var faculty in faculties)
        {
            @if(student.FacultyID == faculty.Id){
                <option value="@faculty.Id" selected="selected">@faculty.Name</option>
            }
            else
            {
                <option value="@faculty.Id">@faculty.Name</option>
            }
        }
    </select>
  </div>  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>